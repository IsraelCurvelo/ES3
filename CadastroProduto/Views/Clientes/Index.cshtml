@model IEnumerable<CadastroProduto.Models.Domain.Cliente>
@{
    ViewData["Title"] = "Cliente";
}

<h2>@ViewData["Title"]</h2>

<p>Clientes cadastrados</p>
<p>
    <a asp-action="Create" class="btn btn-success">Novo</a>
</p>

<table class=" table table-striped table-hover">
    <thread>
        <tr class="warning">

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>


            <th></th>

        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn-primary">Alterar</a>|
                <a asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-info">Detalhes</a>|
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>
