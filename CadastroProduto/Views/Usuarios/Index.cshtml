@model IEnumerable<CadastroProduto.Models.Domain.Usuario>

@{
    ViewData["Title"] = "Usuário";
}

<h2>@ViewData["Title"]</h2>
<p>Lista de usuários </p>

<p>
    <a asp-action="Create" class="btn btn-success">Cadastrar Usuário</a>
</p>

<table class="table table-striped table-hover">
    <thread>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>   

        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Alterar </a> |
                <a asp-action="Details" asp-route-id="@item.Id">Consultar </a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir </a>
            </td>
        </tr>
        }
    </tbody>
</table>
